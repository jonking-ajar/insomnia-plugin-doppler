{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "target": "ES2015"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}